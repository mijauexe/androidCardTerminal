<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9D9D9"
    tools:context=".fragments.FirstFragment">


    <GridLayout
        android:id="@+id/glMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="1"
        android:useDefaultMargins="true"
        app:layout_constraintBottom_toTopOf="@+id/glDown"
        app:layout_constraintEnd_toStartOf="@id/glRight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:src="@drawable/erv_hep" />


        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/tv_date"
            android:textColor="@color/black"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/tv_clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/clock"
            android:textColor="@color/black"
            android:textSize="45sp" />

        <TextView
            android:id="@+id/first_and_last_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:text="Đuro Đurić"
            android:textColor="@color/black"
            android:textSize="50sp" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/person_sample" />

        <ImageView
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/hep_proizvodnja" />

    </GridLayout>

    <GridLayout
        android:id="@+id/glDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/glMain"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/glRight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/glMain">

    </GridLayout>

    <GridLayout
        android:id="@+id/glRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/glMain"
        android:layout_toStartOf="@+id/glMain"
        android:columnCount="1"
        android:useDefaultMargins="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/glMain"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/reason_text"
            android:layout_marginBottom="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Molimo unesite razlog izlaska:"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/business_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Službeno"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <Button
            android:id="@+id/ib_work_trip"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_gravity="start"
            android:visibility="gone"
            android:layout_marginStart="80dp"
            android:layout_marginBottom="25dp"
            android:background="@android:color/transparent"
            android:drawableStart="@drawable/ic_work"
            android:text="Službeno putovanje "
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="35dp" />

        <Button
            android:id="@+id/ib_work_trip_local"
            android:visibility="gone"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_gravity="start"
            android:layout_marginStart="80dp"
            android:layout_marginBottom="25dp"
            android:background="@android:color/transparent"
            android:drawableStart="@drawable/ic_be_to"
            android:text="Lokalno (BE-TO Sisak) "
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="35dp" />

        <Button
            android:id="@+id/ib_work_trip_other"
            android:visibility="gone"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_gravity="start"
            android:layout_marginStart="80dp"
            android:layout_marginBottom="25dp"
            android:background="@android:color/transparent"
            android:drawableStart="@drawable/ic_work"
            android:text="Ostalo "
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="35dp" />

        <Button
            android:id="@+id/ib_contractor_1"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_gravity="start"
            android:visibility="gone"
            android:layout_marginStart="80dp"
            android:layout_marginBottom="25dp"
            android:background="@android:color/transparent"
            android:drawableStart="@drawable/work_alternative"
            android:text="Izlazak po nalogu Naručitelja (HEP-a) "
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="35dp" />

        <Button
            android:id="@+id/ib_contractor_2"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_gravity="start"
            android:visibility="gone"
            android:layout_marginStart="80dp"
            android:layout_marginBottom="25dp"
            android:background="@android:color/transparent"
            android:drawableStart="@drawable/engineering"
            android:text="Izlazak po nalogu poslodavca "
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="35dp" />


        <TextView
            android:id="@+id/private_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Privatno "
            android:textColor="@color/black"
            android:textSize="30dp" />

        <Button
            android:id="@+id/ib_private_w_permission"
            android:visibility="gone"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_gravity="start"
            android:layout_marginStart="80dp"
            android:layout_marginBottom="25dp"
            android:background="@android:color/transparent"
            android:drawableStart="@drawable/go_out"
            android:text="Uz dozvolu "
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="35dp" />


        <Button
            android:id="@+id/ib_private_wout_permission"
            android:visibility="gone"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_gravity="start"
            android:layout_marginStart="80dp"
            android:layout_marginBottom="25dp"
            android:background="@android:color/transparent"
            android:drawableStart="@drawable/emergency"
            android:text="Hitno "
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="35dp" />

        <Button
            android:id="@+id/ib_contractor_3"
            android:visibility="gone"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_gravity="start"
            android:layout_marginStart="80dp"
            android:layout_marginBottom="25dp"
            android:background="@android:color/transparent"
            android:drawableStart="@drawable/go_out"
            android:text="Privatni izlazak "
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="35dp" />

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>